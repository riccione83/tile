<div class= "container" style="margin-top:20px;">

<p id="notice"><%= notice %></p>

 <div class="row">
   
   <div class="col-md-3">
      <p>
        <strong>From:</strong>
        <%= @work.user.email %>
      </p>
      
      <p>
        <strong>Titolo:</strong>
        <%= @work.title %>
      </p>
      
      <p>
        <strong>Description:</strong>
        <%= @work.description.html_safe %>
      </p>
      
      <p>
        <strong>Ultima offerta:</strong>
        <%= @price %>
      </p>
      
      <p>
        <strong>Location:</strong>
        <%= @work.location %>
      </p>
    </div> <!-- md-3 -->
   
   <div class="col-md-6">
     
      <div id="carousel_<%=@work.id%>" class="carousel slide" data-ride="carousel" style=" width:500px; height: 400px !important;">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox" style=" width:500px; height: 400px !important;">
        <% @count = 0 %>  
        
        <% @work.pictures.each do |picture| %>  
          <% if @count == 0 %>
            <div class="item active" style=" width:500px; height: 400px !important;">
          <% else %>
            <div class="item" style=" width: 500px; height: 400px !important;">
          <% end %>
                <img src="<%= picture.image.url %>" alt="..." style=" width: 500px; height: 400px !important;">
                <div class="carousel-caption">
                </div>
            </div>
          <% @count += 1 %>
        <% end %>
        
        <% if @count == 0 %>  <!-- if no image was uploaded -->
         <div class="item active">
            <img src="../assets/idraulico.jpg" style=" width:500px; height: 400px !important;">
            <div class="carousel-caption">
            </div>
          </div>
        <% end %>
          
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel_<%=@work.id%>" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        
        <a class="right carousel-control" href="#carousel_<%=@work.id%>" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
  
      </div>
    </div> <!-- md-9 -->

   <div class="col-md-3">
    <form method="post" action=<%=new_bid_path(@work)%> class="rcorners6">
      <b>Fai un'offerta</b><br>(meno di <%=getCurrentPriceForWork(@work)%>)<br>
      <input type="text" name="new_price" class="form-control"><br>
      <input type="submit" name="submit" value="Invia i dati">
    </form>
  </div>

</div> <!-- ROW -->

<hr>

<div class= "form-signin text-center">
<%= link_to 'Segui', work_follow_path(@work) %> |
<% if current_user.id == @work.user_id %>
  <%= link_to 'Modifica', edit_work_path(@work) %> |
<% end %>
<%= link_to 'Indietro', works_path %>
</div>
<hr>

<h3>Ultime offerte</h3>
<table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Utente</th>
      <th>Offerta</th>
    </tr>
  </thead>

  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.user.email %></td>
        <% if bid.price == 0.0 %>
           <td>Sta seguendo</td>        
        <% else %>
          <td><%= bid.price %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

</div>